<div id="page-content">
  
  <button class="btn btn-success new_article"><%= t("articles.add_news") %><i class="fa fa-plus"></i></button>
  <table id="general-table" class="table table-striped table-bordered table-vcenter">
    <thead>
      <tr>
        <th style="width: 80px;" class="text-center"><label class="csscheckbox csscheckbox-primary"><input type="checkbox"><span></span></label></th>
        <th><%= t("title", scope: "activerecord.attributes.new") %></th>
        <th><%= t("subtitle", scope: "activerecord.attributes.new") %></th>
        <th style="width: 320px;"><%= t("description", scope: "activerecord.attributes.new") %></th>
        <th style="width: 120px;" class="text-center"><i class="fa fa-flash"></i></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |new_item| %>
        <tr>
          <td class="text-center"><label class="csscheckbox csscheckbox-primary"><input type="checkbox"><span></span></label></td>
          <td><strong><%= new_item.name %></strong></td>
          <td><%= new_item.sub_title %></td>
          <td>
            <%= new_item.description %>
          </td>
          <td class="text-center">
            <%= link_to(edit_article_path(new_item), class: "btn btn-effect-ripple btn-sm btn-success", title: t("articles.edit"), "data-toggle" => "tooltip") do %>
              <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to(new_item, class: "btn btn-effect-ripple btn-sm btn-danger", title: t("articles.delete"), method: :delete, "data-toggle" => "tooltip") do %>
              <i class="fa fa-times"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= javascript_include_tag 'uiTables' %>
